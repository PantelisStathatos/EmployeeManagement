@model UserInfoManager.Data.Models.User

@{
    var button = "btn-info";
    if (Model == null)
    {
        button = "btn-success";
    }
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Partial("_DisplayInputForm")

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@ViewBag.SubmitText" class="btn btn-default @button " /> |
            @Html.ActionLink(@Html.Raw(HttpUtility.HtmlDecode("&#128281;")) + " Back to List", "Index")
        </div>
    </div>
}

